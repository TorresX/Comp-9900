<% include header %>


<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">My Assets
        <small>Properties</small>
    </h1>
    <hr>

<!--    <ol class="breadcrumb">-->
<!--        <li class="breadcrumb-item">-->
<!--            <a href="index.html">Home</a>-->
<!--        </li>-->
<!--        <li class="breadcrumb-item active">Portfolio 2</li>-->
<!--    </ol>-->

    <% if (properties.length != 0){%>
            <div class="row">
        <% properties.forEach(function (property) {%>

                <div class="col-lg-6 portfolio-item">
                    <div class="card h-100">
                        <a href="#"><img style="width: 300px;" class="card-img-top" src="<%= property.images[0]%>" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="#">Edit</a>
                            </h4>
                            <hr>
                            <!-- Post Content -->
                            <p class="lead">Address: <%= property.address%></p>
                            <p class="lead">Bedroom: <%=property.bedroom%></p>
                            <p class="lead">Bathroom: <%=property.bathroom%></p>
                            <p class="lead">Garage: <%=property.garage%></p>
                            <p class="lead">Price: <%=property.price%></p>
                            <hr>
                        </div>
                    </div>
                </div>
        <%})%>
            </div>
        <!-- Pagination -->
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
        <!-- /.row -->
        <%}else{%>
            <p>Sorry you have no properties and you have no assets!</p>
            <%}%>

</div>
<!-- /.container -->

<% include footer %>