<% include header %>

<section class="signup">
    <div class="container signupdiv">
        <div class="signup-contnet">
            <div class="signup-form">
                <h2 class="form-title">Log in</h2>
                <form action="/login" method="post" class="register-form" id="register-form">
                    <div class="form-group">
                        <label for="email"><i class="signlabel fas fa-envelope"></i></label>
                        <input class="signinput" type="email" name="username" id="email" placeholder="Your Email">
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="signlabel fas fa-lock"></i></label>
                        <input class="signinput" type="password" name="password" id="pass" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="iamlandlord" id="iamlandlord" class="agree-term">
                        <label for="iamlandlord" class=" label-agree-term">
                            <span><span></span></span>I am a landlord

                        </label>
                        <button type="submit" name="signup" id="signupbutton" class="signupbutton btn btn-outline-dark">Log in</button>

                    </div>
                </form>
            </div>
