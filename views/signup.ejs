<% include header %>

<section class="signup">
    <div class="container signupdiv">
        <div class="signup-contnet">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form action="/signup" method="post" class="register-form" id="register-form">
                    <div class="form-group">
                        <label for="name"><i class=" signlabel fas fa-user-alt"></i></label>
                        <input class="signinput" type="text" name="name" id="name" placeholder="Your Name">
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="signlabel fas fa-envelope"></i></label>
                        <input class="signinput" type="email" name="username" id="email" placeholder="Your Email" required>
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="signlabel fas fa-lock"></i></label>
                        <input class="signinput" type="password" name="password" id="signup_password" onkeyup="checkPasswordMatch()" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="signlabel fas fa-key"></i></label>
                        <input class="signinput" type="password" name="re_password" id="signup_re_password" onkeyup="checkPasswordMatch()" placeholder="Repeat your password" required>

                    </div>
                    <span id='password_message' class="password_message"></span>
                    <div class="form-group">
                        <input type="checkbox" name="iamlandlord" id="iamlandlord" class="agree-term">
                        <label for="iamlandlord" class=" label-agree-term">
                            <span><span></span></span>I am a landlord

                        </label>
                        <button type="submit" name="signup" id="signupbutton" class="signupbutton btn btn-outline-dark">Register</button>

                    </div>

<!--                    <div class="form-group form-button">-->
<!--&lt;!&ndash;                        <input type="submit" name="signup" id="signupbutton" class="form-submit" value="Register">&ndash;&gt;-->
<!--                        <button type="submit" name="signup" id="signupbutton" class="btn btn-primary">Register</button>-->
<!--                    </div>-->

                </form>
                <div class="alreadyhaveanaccount">
                    <span> <a href="/login">I already have an account</a></span>
                </div>
            </div>
<!--            <div class="signup-image">-->
<!--                <figure>-->
<!--                    <img src="https://colorlib.com/etc/regform/colorlib-regform-7/images/signup-image.jpg" alt="">-->
<!--                </figure>-->
<!--                <a href="#" class="signup-image-link">I am already a member</a>-->
<!--            </div>-->
        </div>
    </div>

</section>

<script>
    function checkPasswordMatch () {
        if (document.getElementById('signup_password').value ===
            document.getElementById('signup_re_password').value){
            console.log("Match");
            document.getElementById('password_message').style.color = 'green';
            document.getElementById('password_message').innerHTML = '';
            document.getElementById('signupbutton').disabled = false;

        }else{
            console.log("does not match");
            document.getElementById('password_message').style.color = 'red';
            document.getElementById('password_message').innerHTML = 'Does not match !';
            document.getElementById('signupbutton').disabled = true;

        }
    }
</script>

